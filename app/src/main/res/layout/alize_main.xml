<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/speakers_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="changeActivity"
        android:textSize="25sp"
        android:text="@string/speakers_list"
        android:textAllCaps="false"
        style="@style/prettyButton"
        />

    <Button
        android:id="@+id/add_speaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/speakers_list"
        android:onClick="changeActivity"
        android:textSize="25sp"
        android:text="@string/add_speaker"
        android:textAllCaps="false"
        style="@style/prettyButton"
        />

    <Button
        android:id="@+id/edit_speaker_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_speaker"
        android:onClick="changeActivity"
        android:textSize="25sp"
        android:text="@string/edit_speaker_model"
        android:textAllCaps="false"
        style="@style/prettyButton"
        />

    <Button
        android:id="@+id/verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_speaker_model"
        android:onClick="changeActivity"
        android:textSize="25sp"
        android:text="@string/verification"
        android:textAllCaps="false"
        style="@style/prettyButton"
        />


</android.support.constraint.ConstraintLayout>
